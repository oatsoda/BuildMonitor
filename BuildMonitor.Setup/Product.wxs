<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
	<Package 
			Name="Build Monitor"
      Language="1033" 
      Version="2.0.0.0" 
      Manufacturer="Andrew Milne"
      UpgradeCode="e3c1dc46-3b01-437a-8e9c-aae2e7046c6c" 
      InstallerVersion="200">
    
		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed."/>
		<MediaTemplate EmbedCab="yes"/>
		<Icon Id="icon.ico" SourceFile="..\BuildMonitor.UI\Resources\_0031_Tools.ico"/>
		<Property Id="ARPPRODUCTICON" Value="icon.ico"/>
    
		<!-- Run on finish
    <!- Add "Launch" checkbox to UI ->
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT" Value="Launch BuildMonitor" />
    
    <!- Custom Action to run ->
    <Property Id="WixShellExecTarget" Value="[#myapplication.exe]" />
    <CustomAction Id="LaunchApplication" BinaryKey="WixCA" DllEntry="WixShellExec" Impersonate="yes" />
    -->
    
		<UI Id="UserInterface">
			<Property Id="WIXUI_INSTALLDIR" Value="TARGETDIR"/>
			<Property Id="WixUI_Mode" Value="Custom"/>
			<TextStyle Id="WixUI_Font_Normal" FaceName="Tahoma" Size="8"/>
			<TextStyle Id="WixUI_Font_Bigger" FaceName="Tahoma" Size="9" Bold="yes"/>
			<TextStyle Id="WixUI_Font_Title" FaceName="Tahoma" Size="9" Bold="yes"/>
			<Property Id="DefaultUIFont" Value="WixUI_Font_Normal"/>
			<DialogRef Id="ProgressDlg"/>
			<DialogRef Id="ErrorDlg"/>
			<DialogRef Id="FilesInUse"/>
			<DialogRef Id="FatalError"/>
			<DialogRef Id="UserExit"/>
			<!-- Run on finish
      <Publish Dialog="ExitDialog"
        Control="Finish"
        Event="DoAction"
        Value="LaunchApplication">WIXUI_EXITDIALOGOPTIONALCHECKBOX = 1 and NOT Installed</Publish>
      -->
			<Publish Dialog="ExitDialog" Control="Finish" Event="EndDialog" Value="Return" Order="999"/>
			<Publish Dialog="WelcomeDlg" Control="Next" Event="EndDialog" Value="Return" Order="2"/>
		</UI>
    
		<UIRef Id="WixUI_Common"/>
    
		<Feature Id="ProductFeature" Title="Build Monitor" Level="1">
			<ComponentGroupRef Id="ProductComponents"/>
			<!-- Add Start Menu -->
			<ComponentRef Id="AppShortcut"/>
			<!-- Add Desktop Shortcut-->
			<ComponentRef Id="ApplicationShortcutDesktop"/>
		</Feature>
    
		<DirectoryRef Id="AppProgramsFolder">
			<Component Id="AppShortcut" Guid="A91F4FDE-D4A4-4E1F-8C1C-20DE11918365">
				<Shortcut Id="AppStartMenuShortcut" Name="Build Monitor" Description="Tray Application to Monitor Builds" Target="[INSTALLFOLDER]BuildMonitor.App.exe" WorkingDirectory="INSTALLFOLDER" Icon="icon.ico" IconIndex="0"/>
				<RemoveFolder Id="AppProgramsFolder" On="uninstall"/>
				<RegistryValue Root="HKCU" Key="Software\AndrewMilne\BuildMonitor" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
			</Component>
		</DirectoryRef>
    
		<StandardDirectory Id="DesktopFolder">
			<Component Id="ApplicationShortcutDesktop">
				<Shortcut Id="ApplicationDesktopShortcut" Name="Build Monitor" Description="Tray Application to Monitor Builds" Target="[INSTALLFOLDER]BuildMonitor.App.exe" WorkingDirectory="INSTALLFOLDER" Icon="icon.ico" IconIndex="0"/>
				<RemoveFolder Id="DesktopFolder" On="uninstall"/>
				<RegistryValue Root="HKCU" Key="Software\AndrewMilne\BuildMonitor" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
			</Component>
		</StandardDirectory>
    
		<ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
			<Component Id="ProductComponent">
				<File Source="BuildMonitor.App.exe"/>
			</Component>
		</ComponentGroup>
    
		<StandardDirectory Id="ProgramFiles64Folder">
			<Directory Id="INSTALLFOLDER" Name="Build Monitor"/>
		</StandardDirectory>
    
		<!--Start Menu Folder-->
		<StandardDirectory Id="ProgramMenuFolder">
			<Directory Id="AppProgramsFolder" Name="Build Monitor"/>
		</StandardDirectory>
    
		<!-- Desktop Folder-->
		<StandardDirectory Id="DesktopFolder"/>
    
	</Package>
</Wix>